{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Export tRPC API",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "baseUrl": "../../src",
    "paths": {
      ".": ["."]
    },

    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": [
      "../src/server/rest-api/common/types",
      "../node_modules/@types"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2022"
  },
  "exclude": ["../../dist", "../../node_modules"]
}
